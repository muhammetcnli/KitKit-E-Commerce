@model Product
<form asp-controller="Home" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="ProductId">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" placeholder="Ürün Adı Değiştir"
         style="background-color: white;" 
              onfocus="this.style.backgroundColor='aliceblue';" 
              onblur="this.style.backgroundColor='white';">
        <span asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" placeholder="Ürünün Fiyatını Girin"
         style="background-color: white;" 
              onfocus="this.style.backgroundColor='aliceblue';" 
              onblur="this.style.backgroundColor='white';">
        <span asp-validation-for="Price"></span>
    </div>
    <div class="mb-3 input-group">
        <input type="file" name="imageFile" id="imageFile" class="form-control">
    </div>
    <div class="mb-3 input-group">
        <img src="~/img/@Model.Image" alt="" style="width: 100px;">
            <input type="hidden" asp-for="Image">
    </div>
    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label"></label>
        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
            <option value="0">Seçiniz</option>
            
        </select>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="IsActive" type="checkbox" class="form-check-input">
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>
    


    <button type="submit" class="btn btn-success">Kaydet</button>
</form>